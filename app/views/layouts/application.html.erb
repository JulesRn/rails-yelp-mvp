<!DOCTYPE html>
<html>
  <head>
    <title>RailsYelpMvp</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>
    <meta http-equiv="X-UA-Compatible" content="IE=edge,chrome=1">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <%= stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <nav class="bg-light">
      <div class="row d-flex justify-content-between bg-light">
        <div class="column p-4 ml-3">
          <h2 id="menu"><%= link_to "Yelp", restaurants_path %></h2>
        </div>
        <div class="column p-4 mr-3">
          <button type="button" class="btn btn-outline-primary"><%= link_to "Add a restaurant", new_restaurant_path %></button>
        </div>
      </div>
    </nav>

    <%= yield %>
  </body>
</html>
